            const shareButton = document.getElementById("share-button"); // è·å–åˆ†äº«æŒ‰é’®

            // ç‚¹å‡»â€œç”Ÿæˆé¢„æŠ¥â€æŒ‰é’®ï¼Œæ˜¾ç¤ºæ¨¡æ€æ¡†
            generateButton.addEventListener("click", function() {
