                qrContainer.innerText = "äºŒç»´ç ç”Ÿæˆå¤±è´¥";
                console.error("ä¸Šä¼ å›¾ç‰‡å¤±è´¥", err);
              });
            });
          }

        if (uploadedBackgroundImage) {           
            const img = new Image();
            img.onload = function () {                
